@page
@model AyudaWebApp.Pages.Forms.SignUpModel
@{
    ViewData["Title"] = "Sign Up";
}



<main>
    <div class="container mt-4">
        <div class="row">
            <div class="col"></div>
            <div class="col-8">
                <section class="sec">
                    <div class="form-area" data-aos="fade-down">

                        <div class="user signinbx">
                            <div class=" img-bx"><img src="https://source.unsplash.com/random/400x500" alt=""></div>
                            <div class="form-bx">
                                <form>
                                    <h2>Sign In</h2>
                                    <p class="mb-2">Welcome back</p>
                                    <input type="email" id="email" name="email" placeholder="Email" required>
                                    <input type="password" id="password" name="password" placeholder="Password"
                                           required>
                                    <input type="submit" value="Log In">
                                    <p><a href="#">Forgot Password?</a></p>

                                    <p class="sign-in-part">
                                        Dont have an account? <a href="#" class="switchTrigger"
                                                                 onclick="toggleForm();">Sign Up</a>
                                    </p>
                                </form>
                            </div>
                        </div>

                        <div class="user signupbx switch-auth">
                            <div class=" form-bx">
                                <form method="post">
                                    <h2>Create an Account</h2>
                                    <p class="mb-2">to start a campaign</p>
                                    <input type="text" id="fullname" name="FullName" placeholder="Full Name" required asp-for="FullName">
                                    <input type="email" id="email" name="EmailAddress" placeholder="Email" required asp-for="EmailAddress">
                                    <input type="tel" id="phoneNumber" name="PhoneNumber" placeholder="Phone Number" required asp-for="PhoneNumber">
                                    <input type="password" id="passwor" name="password" placeholder="Password" required asp-for="Password">
                                    <input type="password" id="confirmpassword" name="ConfirmPassword"
                                           placeholder="Confirm Password" required asp-for="ConfirmPassword">
                                    <input type="text" id="nationalIDNumber" name="NationalIDNumber" placeholder="Valid National ID" required asp-for="NationalIDNumber">
                                    <input type="submit" value="Sign Up">
                                    <p>
                                        By signing up, you agree to Ayuda's <a href="#">Terms of Use</a> and <a href="#">
                                            Privacy
                                            Policy
                                        </a>
                                    </p>
                                    <p class="sign-in-part">
                                        Already have an account? <a href="#" class="switchTrigger"
                                                                    onclick="toggleForm();">Sign In</a>
                                    </p>

                                </form>
                            </div>
                            <div class="img-bx"><img src="https://source.unsplash.com/random/" alt=""></div>
                        </div>

                    </div>
                </section>

            </div>
            <div class="col"></div>
        </div>


    </div>

</main>



